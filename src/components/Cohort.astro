---
interface Props {
  name: string;
  description?: string;
}

const { name, description = "" } = Astro.props;
---

<article
  class="flex h-fit min-w-40 flex-col items-center rounded-lg bg-white pb-4 shadow-md"
>
  <h2
    class="bg-cohortHeader text-color w-full rounded-t-lg p-4 text-center text-xl font-bold sm:text-3xl"
  >
    {name}
  </h2>
  <div>
    {description ? <p class="p-4">{description}</p> : null}
    <slot />
  </div>
  <a
    href="#"
    class="bg-cohortHeading hover:bg-buttonHover appearance-none rounded-lg px-4 py-2 font-semibold text-black shadow-md hover:text-white focus:outline-none focus:ring-2 focus:ring-purple-400 focus:ring-opacity-75"
  >
    View Project
  </a>
</article>
